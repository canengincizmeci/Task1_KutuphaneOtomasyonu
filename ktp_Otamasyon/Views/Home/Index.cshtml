@model List<ktp_Otamasyon.Models.Kitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Yazar</th>
                <th>Kategori</th>
                <th>Sayfa Sayısı</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kitap in Model)
            {
                <tr>
                    <td>@kitap.id</td>
                    <td>@kitap.kitapAd</td>
                    <td>@kitap.yazar</td>
                    <td>@kitap.kategori_ad</td>
                    <td>@kitap.sayfaSayisi</td>
                    <td><a href="@Url.Action("Sil","Home",new {kitap_id=kitap.id})" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Ekle","Home")" class="btn btn-success">Ekle</a>
</div>

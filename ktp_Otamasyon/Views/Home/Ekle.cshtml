@model Kategoriler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <form action="@Url.Action("Ekle","Home")" method="post">
        @Html.AntiForgeryToken()
        <label>

            Kitap Ad:  <input type="text" class="form-control" name="kitap_ad" />
        </label>
        <br />
        <label>
            Yazar:
            <input type="text" name="yazar" class="form-control" />
        </label>
        <br />
        <label>
            Sayfa Sayısı:
            <input type="text" name="sayfa_sayisi" class="form-control" />
        </label>
        <br />
        <label>
            @Html.DropDownListFor(m => m.id, (List<SelectListItem>)ViewBag.Ktg, new { @class = "form-control" })
        </label>
        <br />


     
        <button type="submit" class="btn btn-success">Gönder</button>

    </form>
</div>

